<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= keys.nameweb
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    body

    h2= keys.nameweb
    .container
        form(action="", method="post")
            div.form-group
                label(for="formGroupExampleInput").h2 Agregar 
                br
                input(type="text" id="formGroupExampleInput" name="nombre" placeholder="Ingresar").form-control
                br
                button(type="submit").btn.btn-success Agregar
        
            
    .container
        br

        each resultado in resul
                .table-responsive
                    table.table
                        tr
                            td
                                p= resultado.id_prueba
                            td
                                p.border-left-0: b= resultado.name
                            td
                                a(href=`/delete/${resultado.id_prueba}`).btn.btn-danger Eliminar
                                a(href=`/update/${resultado.id_prueba}`).btn.btn-warning Actualizar
